#!/bin/bash

usage() {
    echo
    echo "$(basename $0) [-gh] [-gl] [-a] [-bb]"
    echo
    echo "-gh       github"
    echo "-gl       gitlab"
    echo "-a        aur"
    echo "-bb       bitbucket"
    echo
}

[[ "$#" < 0 ]] && usage

case $3 in
    --ssh ) url=git@git
            delim=: ;;
    *) url=https://git
        delim=/ ;;
esac

case $1 in
    -gh ) git clone ${url}hub.com${delim}$2 ;;
    -gl ) git clone ${url}lab.com${delim}$2 ;;
    -a ) git clone https://aur.archlinux.org/$2 ;;
    -bb ) git clone https://bitbucket.org/$2 ;;
    *) usage
esac
