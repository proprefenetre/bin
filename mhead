#!/usr/bin/bash

if [[ $# != 0 ]]; then
    case $1 in
        -l ) xrandr --output VGA1 --rotate left
            ;;
        -r ) xrandr --output VGA1 --rotate right
            ;;
        # this acts weird. Returning the display back to normal only works 
        # with with "mhead -n" followed by the xrandr command below ("mhead")
        -n ) xrandr --output VGA1 --rotate normal 
            ;;
        -i ) xrandr --output LVDS1 --auto --output VGA1 --auto --right-of LVDS1 
            ;;
        * )
            echo "usage:"
            echo "$0 [-l | -r | -n | -i]"
            echo "-l:   rotate left"
            echo "-r:   rotate right"
            echo "-n:   back to normal"
            echo "-i:   switch primary/secondary screen"
    esac
else
    if [[ $(xrandr | grep "VGA1 disconnected") ]]; then
        xrandr --output LVDS1 --auto --output VGA1 --off 
    else
        xrandr --output LVDS1 --auto --primary --output VGA1 --auto --left-of LVDS1
        . ~/.fehbg
    fi
fi
